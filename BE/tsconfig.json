{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "prisma/client.ts"],
  "exclude": ["node_modules", "dist"]
}
